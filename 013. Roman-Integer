class Solution {
public:
    int val(char ch){
        switch(ch){
            case 'I':
                return 1;
            case 'V':
                return 5;
            case 'X':
                return 10;

            case 'L':
                return 50;
            case 'C':
                return 100;
            case 'D':
                return 500;
            case 'M':
                return 1000;
            default:
                return 0;
        }
    }

    int romanToInt(string s) {
        int l=s.length();
        int s1, s2;
        int res=0;
        for (int i = 0; i < l; i++)
        {
            s1=val(s[i]);
            s2=0;
            
            if (i+1<l)
            {
                s2=val(s[i+1]);
            }
            
            if (s1<s2)
            {
                res=res+(s2-s1);
                i++;
            }
            else{
                res+=s1;
            }
        }
    return res;
    } 
};
